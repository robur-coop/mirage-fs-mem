opam-version: "2.0"
maintainer: [
  "Stefanie Schirmer @linse"
]
authors: [
  "Stefanie Schirmer @linse"
  "Hannes Mehnert"
]
homepage: "https://github.com/robur-coop/mirage-fs-mem"
doc: "https://robur-coop.github.io/mirage-fs-mem/"
bug-reports: "https://github.com/robur-coop/mirage-fs-mem/issues"
dev-repo: "git+https://github.com/robur-coop/mirage-fs-mem.git"
tags: [ "org:mirage" "org:robur" ]
license: "ISC"

build: [
  ["dune" "subst"] {pinned}
  ["dune" "build" "-p" name "-j" jobs]
  ["dune" "runtest" "-p" name "-j" jobs] {with-test}
]

depends: [
  "ocaml" {>= "4.05.0"}
  "dune" {build}
  "alcotest" {with-test}
  "ppx_deriving" {with-test}
  "mirage-kv-lwt"
  "rresult"
  "fmt"
]

synopsis: "In-memory file system for for MirageOS"
description: """
Implements the mirage-fs interface, but does not provide a persistent data storage.
Use for testing or amnesia.
"""
